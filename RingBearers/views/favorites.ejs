<%- include('partials/header', { title: 'Favorieten', cssLink: '/css/default.css', iconsWeb: '' }) %>

<h1>Favoriete Quotes</h1>

<p><a href="/favorites/export">📄 Exporteer naar tekstbestand</a></p>

<ul>
  <% for (const character in characterCounts) { %>
    <li>
      <a href="/favorites/character/<%= character %>">
        <%= character %> (<%= characterCounts[character] %>)
      </a>
      — <a href="https://lotr.fandom.com/wiki/<%= encodeURIComponent(character) %>" target="_blank">Wiki</a>
    </li>
  <% } %>
</ul>

<ul>
  <% quotes.forEach(quote => { %>
    <li>
      "<%= quote.dialog %>" - <%= quote.character %>
      <form action="/favorites/remove" method="POST" style="display:inline">
        <input type="hidden" name="quoteId" value="<%= quote._id %>">
        <button type="submit">🗑️ Verwijder</button>
      </form>
    </li>
  <% }) %>
</ul>

</body>
</html>